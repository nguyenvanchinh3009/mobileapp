                android:background="@drawable/hinh5"
                android:scaleType="centerCrop" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="206dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:text="The Last Of Us"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="350dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/hinh2"/>
        </RelativeLayout>

        <!-- movie6 (không cần gắn id nếu không dùng trong code) -->
