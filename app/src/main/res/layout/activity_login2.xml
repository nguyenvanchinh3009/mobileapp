<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hinhnen" />

    <!-- Nội dung chính -->
    <LinearLayout
        android:alpha="0.9"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        android:paddingHorizontal="30dp"
        android:gravity="center_horizontal">


        <!-- Logo DODOFLIX -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DODO"
                android:textColor="#8E0BCA"
                android:textSize="45sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLIX"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Khoảng cách -->
        <View android:layout_height="30dp" android:layout_width="match_parent" />

        <!-- Username -->
        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_backgroud"
            android:hint="User Name"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#0B0606" />

        <!-- Password -->
        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_backgroud"
            android:hint="Password"
            android:gravity="center"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <!-- Sign In -->
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/buttoncolor"
            android:text="Sign In"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Register -->
        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_backgroud"
            android:text="Register a new account"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />


        <!-- Change Password -->
        <TextView
            android:id="@+id/txtnewpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_backgroud"
            android:text="Change new password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center" />

        <!-- CheckBox -->
        <CheckBox
            android:id="@+id/checkboxRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_backgroud"
            android:text="Save Password"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản? Đăng ký ngay!"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp" />


    </LinearLayout>
</FrameLayout>
